<% layout('/layouts/boilerplate') %>
<body>
    <div class="col-8 offset-2">
    <br><br>
    <h1>New List</h1>
    <!-- listing[] making all the field as object key and the response in form is the value -->
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" placeholder="enter catchy title" class="form-control" required>
            <div class="valid-feedback">Title looks good</div>
            <div class="invalid-feedback">Invalid Title</div>

        </div>
        <br>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" placeholder="Enter short description" class="form-control" required></textarea>
            <div class="invalid-feedback">Describe the place</div>

        </div>
        <br>
        <!-- <div class="mb-3"> 
            <label for="image" class="form-label">Image</label>
            <input type="text" placeholder="enter URL" name="listing[image]" class="form-control">
        </div> -->
        <div class="mb-3"> 
            <label for="image" class="form-label">Upload Image</label>
            <input type="file" name="listing[image]" class="form-control">
        </div>
        <br>
        <div class="mb-3">
            <label for="category" class="form-label">Category</label>
            <select name="listing[category]" class="form-select" required>
                <option value="">Select a Category</option>
                <option value="room">Room</option>
                <option value="trending">Trending</option>
                <option value="arctic">Arctic</option>
                <option value="pools">Pools</option>
                <option value="mountains">Mountains</option>
                <option value="castle">Castle</option>
                <option value="farm">Farm</option>
                <option value="mountain city">Mountain City</option>
                <option value="camping">Camping</option>
            </select>
            <div class="invalid-feedback">Category is required</div>
        </div>
        <br>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input type="text" name="listing[price]" placeholder="2000" class="form-control" required>
            <div class="invalid-feedback">Price should be valid</div>

            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="listing[country]" placeholder="Pakistan" class="form-control" required>        
            <div class="invalid-feedback">Country is required</div>
            </div>
        </div>
        <br>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" placeholder="Karachi, Dubai etc" class="form-control" required>
            <div class="invalid-feedback">Location is required</div>
        </div>
        <br>
         <button class="btn btn-dark add-btn">ADD</button>
    </form>
    <br><br>
    </div>
</body>
